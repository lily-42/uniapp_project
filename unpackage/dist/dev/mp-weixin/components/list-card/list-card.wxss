.article-list-card {
  width: 100%;
  height: 280rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  border-radius: 3px;
  box-shadow: 0 13px 15px rgba(31, 45, 61, 0.15);
}
.article-list-card .top-auther {
  height: 45px;
  display: flex;
  align-items: center;
  margin-right: 10px;
}
.article-list-card .top-auther .left {
  height: 100%;
  display: flex;
  align-items: center;
}
.article-list-card .top-auther .left .userInfo {
  height: 100%;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.article-list-card .top-auther .left .userInfo .username {
  font-size: 12px;
  font-weight: 700;
  color: #333;
  margin-bottom: 2px;
}
.article-list-card .top-auther .left .userInfo .create-date {
  font-size: 12px;
  color: #909090;
}
.article-list-card .top-auther .article-tags {
  margin-left: 20px;
  display: flex;
  align-items: flex-start;
  height: 100%;
  padding-top: 10px;
}
.article-list-card .top-auther .article-tags .u-tag-wrapper {
  margin-right: 10rpx;
}
.article-list-card .bottom-content {
  display: flex;
  width: 100%;
  justify-content: space-between;
  overflow: hidden;
  box-sizing: border-box;
  cursor: pointer;
  flex: 1;
}
.article-list-card .bottom-content .left {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 15rpx 0 0;
}
.article-list-card .bottom-content .left ._h1 {
  font-weight: 700;
  font-size: 14px;
  line-height: 24px;
  color: #2C405A;
  margin-bottom: 8px;
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.article-list-card .bottom-content .left .abstract {
  flex: 1;
}
.article-list-card .bottom-content .left .abstract ._p {
  font-weight: 400;
  font-size: 13px;
  line-height: 22px;
  color: #86909c;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.article-list-card .bottom-content .left .like-views-collection {
  height: 30px;
  width: 100%;
  display: flex;
  align-items: center;
}
.article-list-card .bottom-content .left .like-views-collection .views {
  margin-right: 20px;
  display: flex;
  align-items: center;
}
.article-list-card .bottom-content .left .like-views-collection .likes {
  margin-right: 20px;
  display: flex;
  align-items: center;
}
.article-list-card .bottom-content .left .like-views-collection .comments {
  display: flex;
  align-items: center;
}
.article-list-card .bottom-content .left .like-views-collection .iconfont {
  color: #4e5969;
  margin-right: 3px;
}
.article-list-card .bottom-content .left .like-views-collection ._span {
  font-size: 12px;
  color: #4e5969;
}
.article-list-card .bottom-content .right {
  height: 100%;
  overflow: hidden;
}
.article-list-card .bottom-content .right .uni-image {
  width: 100%;
  height: 100%;
}

