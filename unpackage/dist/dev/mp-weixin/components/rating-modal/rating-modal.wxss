.content-box {
  display: flex;
  flex-direction: column;
}
.content-box .star-box {
  display: flex;
  margin: 0 auto;
  align-items: center;
  height: 120rpx;
}
.content-box .star-box .star {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content-box .star-box .star .iconfont {
  margin: 0 10rpx;
  font-size: 36rpx;
  color: #ccc;
}
.content-box .star-box .star .active {
  color: yellow;
}
.content-box .star-box .star .title {
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #b92b27;
  opacity: 0;
}
.content-box .star-box .star .select {
  opacity: 1;
}
.content-box .tags-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.content-box .tags-box .tags {
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding: 6rpx 10rpx;
  margin-bottom: 20rpx;
}
.content-box .tags-box .active {
  color: #fff;
  background: #b92b27;
  /* fallback for old browsers */
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #1565C0, #b92b27);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}
.content-box .spit-box {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.content-box .spit-box .spit {
  font-size: 30rpx;
  color: #b92b27;
}
.content-box .see-all-rating {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  height: 74rpx;
}
.content-box .see-all-rating .see-text {
  font-size: 28rpx;
  color: #2979ff;
}

