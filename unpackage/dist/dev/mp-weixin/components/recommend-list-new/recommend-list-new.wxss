.recommend-list-new-box {
  position: relative;
  margin-left: 16vw;
  margin-bottom: 40rpx;
  width: 74vw;
  height: 200rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 16rpx 10rpx 106rpx;
  box-sizing: border-box;
  box-shadow: 0 10px 10px rgba(31, 45, 61, 0.2);
}
.recommend-list-new-box .cover-box {
  width: 148rpx;
  height: 148rpx;
  position: absolute;
  position: absolute;
  top: 50%;
  left: -60rpx;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
  box-shadow: 0px 14px 60px rgba(34, 35, 58, 0.4);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #D3CCE3;
  /* fallback for old browsers */
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #E9E4F0, #D3CCE3);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}
.recommend-list-new-box .cover-left {
  left: -60rpx;
}
.recommend-list-new-box .cover-right {
  right: -60rpx;
}
.recommend-list-new-box .card-title {
  width: 40vw;
  height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.recommend-list-new-box .card-type {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  padding: 4rpx 8rpx;
  letter-spacing: 4rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 18rpx;
  background: #DA4453;
  opacity: 0.8;
  font-family: "微软雅黑";
  /* fallback for old browsers */
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #89216B, #DA4453);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}
.recommend-list-new-box .card-abstarct {
  font-size: 20rpx;
  line-height: 36rpx;
  letter-spacing: 6rpx;
  color: #909399;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.recommend-list-new-box .left-bottom {
  display: flex;
  justify-content: flex-end;
  box-sizing: border-box;
  color: #333;
  flex: 1;
}
.recommend-list-new-box .left-bottom .views {
  font-size: 18rpx;
  color: #333;
  display: flex;
  align-items: flex-end;
}
.recommend-list-new-box .left-bottom .views .iconfont {
  color: #333;
  margin-right: 6rpx;
}
.recommend-list-new-box .left-bottom .comments {
  font-size: 18rpx;
  color: #333;
  display: flex;
  align-items: flex-end;
  margin-left: 14rpx;
}
.recommend-list-new-box .left-bottom .comments .iconfont {
  color: #333;
  margin-right: 3px;
}
.recommend-list-new-box .left-bottom .likes {
  font-size: 18rpx;
  color: #333;
  display: flex;
  align-items: flex-end;
  margin-left: 14rpx;
}
.recommend-list-new-box .left-bottom .likes .iconfont {
  color: #333;
  margin-right: 3px;
}
.recommend-list-new-box .left-bottom .num {
