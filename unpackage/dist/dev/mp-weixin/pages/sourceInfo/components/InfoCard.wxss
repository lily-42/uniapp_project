.card-info-box {
  width: 100%;
}
.card-info-box .card-top {
  background-color: #ffffff;
  padding: 40rpx 0 0 0;
}
.card-info-box .card-top .cover-box {
  display: flex;
  justify-content: center;
}
.card-info-box .card-top .source-tags {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
.card-info-box .card-top .source-tags .u-tag-wrapper {
  margin-right: 10rpx;
}
.card-info-box .card-top .source-title {
  width: 100%;
  margin: 20rpx 0;
  font-size: 16px;
  font-weight: 800;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 50rpx;
  box-sizing: border-box;
  word-break: break-word;
  text-align: center;
}
.card-info-box .card-top .source_abstract {
  padding: 0 80rpx;
  display: flex;
  text-align: justify;
}
.card-info-box .card-top .source_abstract .abstract-text {
  color: #909399;
  font-size: 30rpx;
}
.card-info-box .card-top .source-screen {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.card-info-box .card-top .source-screen .title {
  margin: 40rpx 0 40rpx 0;
  box-sizing: border-box;
  font-size: 20px;
  font-weight: 600;
}
.card-info-box .card-top .source-screen .screen-img {
  max-width: 80%;
  box-shadow: 0 13px 15px rgba(31, 45, 61, 0.1);
  border-radius: 3px;
  margin-bottom: 20rpx;
}
.card-info-box .card-top .source-tiem {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
.card-info-box .card-top .source-tiem .u-text {
  width: 100%;
  display: flex;
  justify-content: center !important;
  align-items: center;
}
.card-info-box .card-top .source-views {
  height: 100rpx;
  margin-top: 20rpx;
  border-top: 1px solid #E1E1E1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.card-info-box .card-top .source-views .hr {
  height: 100%;
  width: 2rpx;
  background-color: #eee;
}
.card-info-box .card-top .source-views .views {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.card-info-box .card-top .source-views .views .iconfont {
  margin-right: 10rpx;
  font-size: 16px;
}
.card-info-box .card-top .source-views .views .u-text {
  flex: initial !important;
}
.card-info-box .card-top .source-views .views .views-text {
  color: #909399;
}
.card-info-box .card-top .source-views .views .like-active {
  color: #007aff;
}
.card-info-box .card-top .source-views .like-active {
  color: #007aff;
}
.card-info-box .link-button {
  margin-top: 40rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 40rpx 40rpx 0 40rpx;
}
.card-info-box .link-button .link-bt {
  height: 100rpx;
  width: 100%;
  background: linear-gradient(to right, #5dbcd8, #d533ba);
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6px;
}
.card-info-box .link-button .link-bt .u-link {
  flex: inherit;
  display: flex;
  width: 100%;
  justify-content: center;
  height: 100%;
  align-items: center;
}
.card-info-box .comment-box-wrapper {
  background-color: #ffffff;
  margin-top: 20rpx;
}

