.website-detail .detail-box {
  width: 100%;
  min-height: 200rpx;
  background-color: #ffffff;
  border-radius: 6px;
  padding: 40rpx 0 0 0;
}
.website-detail .detail-box .website-logo {
  display: flex;
  align-items: center;
  justify-content: center;
}
.website-detail .detail-box .website-title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
}
.website-detail .detail-box .website-title text {
  font-size: 36rpx;
  font-weight: 800;
}
.website-detail .detail-box .website-tags {
  display: flex;
  align-items: center;
  justify-content: center;
}
.website-detail .detail-box .website-link {
  width: 100%;
  padding: 40rpx 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.website-detail .detail-box .website-link .link {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
}
.website-detail .detail-box .website-link .link .u-link {
  word-break: break-all;
}
.website-detail .detail-box .website_abstract {
  width: 100%;
  padding: 20rpx 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: flex-start;
}
.website-detail .detail-box .website_abstract .u-text__value {
  text-align: justify;
}
.website-detail .detail-box .website-views {
  height: 100rpx;
  margin-top: 20rpx;
  border-top: 1px solid #E1E1E1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.website-detail .detail-box .website-views .hr {
  height: 100%;
  width: 2rpx;
  background-color: #eee;
}
.website-detail .detail-box .website-views .views {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.website-detail .detail-box .website-views .views .u-text {
  flex: initial;
}
.website-detail .detail-box .website-views .views .views-text {
  color: #909399;
}
.website-detail .detail-box .website-views .views .iconfont {
  margin-right: 10rpx;
  font-size: 16px;
}
.website-detail .detail-box .website-views .views .like-active {
  color: #007aff;
}

