.like-card-box {
  width: 90%;
  height: 200rpx;
  background-color: #ffffff;
  margin: 0 auto;
  border-radius: 3px;
  box-shadow: 0 13px 15px rgba(31, 45, 61, 0.15);
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}
.like-card-box .left {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.like-card-box .left .title {
  box-sizing: border-box;
  font-size: 16px;
  height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.like-card-box .left .origin-title {
  flex: 1;
  border: 1rpx solid #E1E1E1;
  border-radius: 6px;
  padding-left: 10rpx;
  box-shadow: 0 6px 6px rgba(31, 45, 61, 0.15);
  line-height: 2.5;
  font-size: 12px;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.like-card-box .left .bottom {
  display: flex;
  height: 50rpx;
  align-items: flex-end;
}
.like-card-box .left .bottom .view-num {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
}
.like-card-box .left .bottom .view-num .iconfont {
  color: #4e5969;
  margin-right: 4rpx;
  font-size: 24rpx;
}
.like-card-box .left .bottom .view-num .text {
  margin-right: 10rpx;
}
.like-card-box .right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100rpx;
  border-radius: 50%;
}
.like-card-box .right .iconfont {
  font-size: 40rpx;
  color: #333333;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: linear-gradient(to right, #aaaa7f, #d533ba);
}

