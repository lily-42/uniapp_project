page {
  padding: 0;
}
.person-box .userInfo-box {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.person-box .userInfo-box .status_bar {
  height: 25px;
  width: 100%;
}
.person-box .userInfo-box .bgc-img {
  position: absolute;
  opacity: 0.9;
  width: 100%;
  height: 100%;
  border-radius: 100% / 0 0 28% 28%;
}
.person-box .userInfo-box .page-title {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx 0 30rpx;
  box-sizing: border-box;
  position: relative;
}
.person-box .userInfo-box .page-title .title {
  font-weight: 600;
  font-size: 16px;
  color: #ffffff;
  z-index: 2;
}
.person-box .userInfo-box .page-title .setting {
  position: absolute;
  left: 40rpx;
  top: 50%;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
  z-index: 2;
}
.person-box .userInfo-box .page-title .setting .pig-changyong_shezhi {
  font-size: 40rpx;
  color: #ffffff;
}
.person-box .userInfo-box .user-info {
  width: 80vw;
  background-color: #ffffff;
  border-radius: 30rpx;
  position: absolute;
  left: 50%;
  top: 66%;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0 0 0;
  box-shadow: 0 8px 10px rgba(31, 45, 61, 0.2);
}
.person-box .userInfo-box .left {
  display: flex;
  align-items: center;
  position: absolute;
  top: -80rpx;
  border: 12rpx solid #fff;
  border-radius: 50%;
  box-shadow: 13px 13px 15px rgba(255, 255, 255, 0.2);
}
.person-box .userInfo-box .left .u-upload__wrap {
  width: 160rpx;
  height: 160rpx;
}
.person-box .userInfo-box .left .u-upload__wrap .u-upload__wrap__preview {
  margin: 0;
}
.person-box .userInfo-box .left .pig-xiangji3 {
  font-size: 40rpx;
  position: absolute;
  right: -4rpx;
  top: 116rpx;
}
.person-box .userInfo-box .right {
  margin-top: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.person-box .userInfo-box .right .user-detail {
  display: flex;
  flex-direction: column;
}
.person-box .userInfo-box .right .user-detail .username {
  font-size: 16px;
  margin-bottom: 10rpx;
  font-weight: 600;
}
.person-box .userInfo-box .right .toLogin {
  font-size: 20px;
  font-weight: 800;
  color: #007aff;
  letter-spacing: 4rpx;
}
.person-box .userInfo-box .signature {
  font-size: 14px;
  color: #555555;
  display: flex;
  align-items: center;
  justify-content: center;
}
.person-box .userInfo-box .signature .iconfont {
  margin-left: 20rpx;
}
.person-box .userInfo-box .user-other-info {
  height: 100rpx;
  width: 80vw;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #ccc;
}
.person-box .userInfo-box .user-other-info .userlevel {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ccac09;
  font-size: 20rpx;
}
.person-box .userInfo-box .user-other-info .userlevel .score-num {
  display: flex;
}
.person-box .userInfo-box .user-other-info .userlevel .score-num .iconfont {
  margin-right: 6rpx;
}
.person-box .userInfo-box .user-other-info .userlevel .score-num .score-text {
  display: flex;
  align-items: center;
  padding: 0 0 2rpx 0;
}
.person-box .userInfo-box .user-other-info .userlevel .my-score {
  font-size: 20rpx;
}
.person-box .userInfo-box .user-other-info .user-sign {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ccac09;
  font-size: 24rpx;
}
.person-box .my-like-box {
  margin: 140rpx 0;
}
.person-box .user-setting-menu {
  max-height: 360rpx;
  margin: 240rpx 20rpx 0 20rpx;
  box-shadow: 0 8px 10px rgba(31, 45, 61, 0.2);
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 6px;
}

