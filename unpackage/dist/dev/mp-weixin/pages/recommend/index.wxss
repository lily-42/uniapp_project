page {
  padding: 0;
  background: linear-gradient(to right, rgba(170, 170, 127, 0.1), rgba(213, 51, 186, 0.1));
}
.recommend-box {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.recommend-box .bg-img {
  height: 300rpx;
  width: 100vw;
  z-index: 1;
  opacity: 0.9;
}
.recommend-box .tab-box {
  z-index: 2;
  display: flex;
  width: 100vw;
  justify-content: space-around;
  position: absolute;
  top: 240rpx;
}
.recommend-box .tab-box .active {
  box-shadow: 0 10px 10px rgba(31, 45, 61, 0.4);
}
.recommend-box .tab-box .today-recomment-title {
  width: 23vw;
  height: 130rpx;
  z-index: 2;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 6px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
}
.recommend-box .tab-box .today-recomment-title .iconfont {
  font-size: 20rpx;
  color: #333333;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: linear-gradient(to right, #aaaa7f, #d533ba);
  margin-bottom: 10rpx;
}
.recommend-box .tab-box .today-recomment-title .title {
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 2rpx;
  margin-left: 6rpx;
  position: relative;
}
.recommend-box .tab-box .today-recomment-title .title::after {
  content: "";
  position: absolute;
  width: 80rpx;
  height: 4rpx;
  border-radius: 6px;
  background: linear-gradient(to right, #aaaa7f, #d533ba);
  bottom: -25%;
  left: 50%;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
}
.recommend-box .list-box {
  width: 100vw;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.recommend-box .list-box .recommend-card-list-box {
  width: 100vw;
  min-height: 50vh;
  padding: 130rpx 0 30rpx 0;
}
.recommend-box .list-box .ad-box {
  width: 80vw;
  margin: 0 auto;
}
.recommend-box .drag-button {
  background: #FFFFFF;
  border: 0.5px solid #EEEEEE;
  box-shadow: 0 5rpx 10rpx 0 rgba(0, 0, 0, 0.2);
  width: 80rpx;
  height: 80rpx;
  opacity: 0.8;
  z-index: 9;
  font-size: 20rpx;
  color: #bd6a44;
  position: fixed;
  right: 0;
  bottom: 180rpx;
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.recommend-box .drag-button .content-box {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

